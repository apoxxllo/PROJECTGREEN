    <style>
        /* Popup Container */
        .announcement-popup {
            position: fixed;
            bottom: -100px; /* Initially hidden below the screen */
            left: 20px;
            width: 300px;
            background-color: #98d99f;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            opacity: 0; /* Initially invisible */
            transition: bottom 0.5s ease, opacity 0.5s ease;
            z-index: 9999;
        }

        /* Popup Content */
        .popup-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Close Button */
        .close-btn {
            background: none;
            border: none;
            font-size: 20px;
            color: #721c24;
            cursor: pointer;
            transition: color 0.3s;
        }

            .close-btn:hover {
                color: #f5c6cb;
            }

        /* When popup is visible */
        .announcement-popup.show {
            bottom: 20px; /* Slide up to visible position */
            opacity: 1; /* Make it fully visible */
        }

        /* Optional: Stylish Announcement Text */
        #announcement-text {
            margin: 0;
            font-size: 14px;
        }

    </style>

