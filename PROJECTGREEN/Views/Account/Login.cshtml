@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@500&display=swap" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Jost', sans-serif;
            background: linear-gradient(to bottom, #4caf50, #2e7d32);
        }

        .main {
            width: 450px;
            height: 475px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 5px 20px 50px rgba(0, 0, 0, 0.3);
            padding: 20px;
            box-sizing: border-box;
            text-align: center;
        }

            .main img {
                width: 80px;
                height: auto;
                margin-bottom: 20px;
            }

            .main label {
                font-size: 1.5em;
                font-weight: bold;
                margin-bottom: 20px;
                display: block;
                color: #2e7d32;
            }

            .main input {
                width: 90%;
                margin: 10px 0;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                outline: none;
            }

            .main button {
                width: 90%;
                height: 40px;
                margin-top: 20px;
                background: #4caf50;
                color: white;
                font-size: 1em;
                font-weight: bold;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: 0.3s ease-in-out;
            }

                .main button:hover {
                    background: #388e3c;
                }

        .extra-links {
            margin-top: 20px;
            font-size: 0.9em;
        }

            .extra-links a {
                color: #2e7d32;
                text-decoration: none;
            }

                .extra-links a:hover {
                    text-decoration: underline;
                }

        .resident-option {
            margin-top: 20px;
            font-size: 0.9em;
            color: #555;
        }

            .resident-option a {
                color: #4caf50;
                font-weight: bold;
                text-decoration: none;
            }

                .resident-option a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="main">
        <!-- Logo -->
        <img src="~/images/babagLogo.png" alt="Barangay Babag Logo">

        <!-- Login Form -->
        <label>Login</label>
        <form>
            <input type="email" name="email" placeholder="Enter your email" required="">
            <input type="password" name="pswd" placeholder="Enter your password" required="">
            <div class="extra-links">
                
                <a href="#">Forgot Password?</a>
            </div>
            <button type="submit">Log In</button>
            <br />
        </form>

        <!-- Resident Option -->
        <div class="resident-option">
            <p>Not an official? <a href="~/Home/Dashboard">Continue as a resident</a></p>
        </div>
    </div>
</body>
</html>
